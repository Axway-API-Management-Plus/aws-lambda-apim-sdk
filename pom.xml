		<dependency>
			<groupId>el-selector</groupId>
			<artifactId>el-selector</artifactId>
			<scope>system</scope>
			<version>${api.version}</version>
			<systemPath>${apim.lib.location}\plugins\el-selector-${api.version.sp}.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>vordel-common</groupId>
			<artifactId>vordel-common</artifactId>
			<scope>system</scope>
			<version>${api.version}</version>
			<systemPath>${apim.lib.location}\plugins\vordel-common-${api.version.sp}.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>vordel-circuit</groupId>
			<artifactId>vordel-circuit</artifactId>
			<scope>system</scope>
			<version>${api.version}</version>
			<systemPath>${apim.lib.location}\plugins\vordel-circuit-${api.version.sp}.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>vordel-config</groupId>
			<artifactId>vordel-config</artifactId>
			<scope>system</scope>
			<version>${api.version}</version>
			<systemPath>${apim.lib.location}\plugins\vordel-config-${api.version.sp}.jar</systemPath>
