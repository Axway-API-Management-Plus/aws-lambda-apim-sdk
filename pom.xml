	<properties>
		<api.version>7.5.3</api.version>
		<api.version.sp>7.5.3.4-1</api.version.sp>
		<apim.lib.location>D:\Axway\Axway-7.5.3\apigateway\system\lib</apim.lib.location>
		<policystudio.plugin.folder>D:\Axway\Axway-7.5.3\policystudio\plugins</policystudio.plugin.folder>
