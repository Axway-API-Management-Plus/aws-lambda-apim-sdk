			<systemPath>${apim.lib.location}\server.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>manager</groupId>
			<artifactId>manager</artifactId>
			<scope>system</scope>
			<version>${api.version}</version>
			<systemPath>${apim.lib.location}\manager.jar</systemPath>
