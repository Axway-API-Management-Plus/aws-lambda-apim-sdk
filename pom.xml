		<dependency>
			<groupId>org.eclipse.jface</groupId>
			<artifactId>org.eclipse.jface</artifactId>
			<scope>system</scope>
			<version>${api.version}</version>
			<systemPath>${policystudio.plugin.folder}\org.eclipse.jface_3.8.0.v20120912-135020.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.eclipse.gef</groupId>
			<artifactId>org.eclipse.gef</artifactId>
			<scope>system</scope>
			<version>${api.version}</version>
			<systemPath>${policystudio.plugin.folder}\org.eclipse.gef_3.9.0.201212170307.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>com.vordel.rcp</groupId>
			<artifactId>filterbase</artifactId>
			<scope>system</scope>
			<version>${api.version}</version>
			<systemPath>${policystudio.plugin.folder}\com.vordel.rcp.filterbase_7.5.3.v20170410-1638\com.vordel.rcp.filterbase_7.5.3.v20170410-1638.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.eclipse.swt.win32</groupId>
			<artifactId>org.eclipse.swt.win32</artifactId>
			<scope>system</scope>
			<version>${api.version}</version>
			<systemPath>${policystudio.plugin.folder}\org.eclipse.swt.win32.win32.x86_3.8.1.v3836b.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>es-core</groupId>
			<artifactId>es-core</artifactId>
			<scope>system</scope>
			<version>${api.version}</version>
			<systemPath>${apim.lib.location}\plugins\es-core-1.3.0-6.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>vordel-mime</groupId>
			<artifactId>vordel-mime</artifactId>
			<scope>system</scope>
			<version>${api.version}</version>
			<systemPath>${apim.lib.location}\plugins\vordel-mime-${api.version.sp}.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>vordel-trace</groupId>
			<artifactId>vordel-trace</artifactId>
